extends layout

block content
  .container
    h1 Lista de libros

    table.table
      tr
        th Nombre
        th Descripci√≥n
        th Editorial 
        th Fecha
        th Descargar archivo
      each libro in libros
        tr
          td=libro.nombre
          td=libro.descripcion
          td=libro.editorial
          - let fecha = new Date(libro.createdAt)
          - let fechaFormateada = fecha.getDate()+"/"+ (fecha.getMonth()+1) +"/"+ fecha.getFullYear()
          td=fechaFormateada
          td
            a(href="/books/download/"+libro._id)
              button.btn.btn-outline-success.btn-sm.me-2(type="button")=libro.originalName

